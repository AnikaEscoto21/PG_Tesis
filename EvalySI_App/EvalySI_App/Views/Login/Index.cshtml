@model EvalySI_App.Models.Usuarios.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Tu CSS personalizado -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body class="login-page">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/images/Logotipo.png"
                                     alt="login form" class="img-fluid login-image" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form id="loginForm" method="post" asp-controller="Login" asp-action="Login">
                                        @Html.AntiForgeryToken()

                                        <div class="text-center mb-4">
                                            <h2 class="fw-bold mb-2">Iniciar Sesión</h2>
                                            <p class="text-muted">Ingresa tus credenciales para continuar</p>
                                        </div>

                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="Email"><i class="bi bi-envelope-fill"></i> Correo Electrónico</label>
                                            <input type="email" id="Email" name="Email" class="form-control form-control-lg"
                                                   placeholder="ejemplo@correo.com" value="@ViewBag.Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="Password"><i class="bi bi-lock-fill"></i> Contraseña</label>
                                            <div class="password-input-container">
                                                <input type="password" id="Password" name="Password" class="form-control form-control-lg"
                                                       placeholder="******" />
                                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4 text-center">
                                            <button class="btn-login btn-lg w-100" type="submit" id="loginButton">
                                                <span class="login-text">Ingresar</span>
                                                <span class="login-spinner d-none">
                                                    <i class="bi bi-arrow-clockwise spin"></i> Verificando...
                                                </span>
                                            </button>
                                        </div>
                                        <div class="pt-1 mb-4 text-center">
                                            <button type="button" class="btn-login btn-lg w-100"
                                                    onclick="window.location.href='@Url.Action("Index","LandingPage")'">
                                                <span class="login-text">Regresar</span>
                                            </button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>